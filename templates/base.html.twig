			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

			<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
		{% endblock %}
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('assets/css/base.css?v=1.1') }}">
			<link rel="stylesheet" href="{{ asset('assets/css/background.css?v=1.2') }}">
		{% endblock %}
		<script src="{{ asset('assets/js/background.js?v=1.2') }}"></script>
		<script src="{{ asset('assets/js/jquery.min.js?v=1.2') }}"></script>
