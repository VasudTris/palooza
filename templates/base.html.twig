		<script src="https://cdnjs.cloudflare.com/ajax/libs/jqPlot/1.0.9/jquery.jqplot.min.js"></script>

	</head>
	<body>
		{% include '/partials/background.html.twig' %}
		{#! zorgt dat burgermenu niet op login pagina weergeven word #}
		{% if burger is not defined or burger %}
			{% include '/partials/burger.html.twig' %}
